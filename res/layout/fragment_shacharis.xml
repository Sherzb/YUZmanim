<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#33CCFF" >

    <TextView
        android:id="@+id/yuzmanim_textView"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/rounded_corner_bg"
        android:gravity="center"
        android:text="YUZmanim"
        android:textColor="#FFFFFF"
        android:textSize="50sp" />
    
    <TextView
        android:tag="shacharisHeader"
        android:id="@+id/shacharis_header"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/yuzmanim_textView"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="Shacharis"
        android:textColor="#000000"
        android:textSize="25sp" />
    
        <Spinner
        android:id="@+id/spinner"
        android:layout_below="@id/shacharis_header"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:entries="@array/shacharis_days"
        android:prompt="@string/shacharis_spinner" />
    

</RelativeLayout>