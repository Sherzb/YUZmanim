<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrolleView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#33CCFF"
    android:layout_alignParentLeft="true" >

    <RelativeLayout
        android:id="@+id/RelativeLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/full_teal_bg"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/all_the_shacharis_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/square_corner_bg" >

            <RelativeLayout
                android:id="@+id/top"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="2dp" >

                <TextView
                    android:id="@+id/yuzmanim_textView"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="17dp"
                    android:background="@drawable/rounded_corner_bg"
                    android:gravity="center"
                    android:text="YUZmanim"
                    android:textColor="#FFFFFF"
                    android:textSize="50sp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/shacharis_relative_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/top"
                android:paddingBottom="5dp" >

                <TextView
                    android:id="@+id/shacharis_word_view"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="7dp"
                    android:gravity="center"
                    android:text="Shacharis"
                    android:textColor="#000000"
                    android:textSize="40sp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/spinner_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/shacharis_relative_layout"
                android:paddingBottom="5dp" >

                <Spinner
                    android:id="@+id/shacharisSpinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:prompt="@string/shacharis_spinner"
                    android:tag="minchaSpinner" />
            </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>

</ScrollView>